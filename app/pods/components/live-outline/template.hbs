<button {{action "getOutline"}}>Make Outline</button>
{{#if uPlanner.uPlan}}
  <h1>Beginning</h1>
  {{#each uPlanner.uPlan as |step|}}
    <dl>
      <dt>{{step.operator.name}}</dt>
      <dd>
        {{#each step.currentState as |proposition|}}
          <ul><li>{{proposition.slug}}</li></ul>
        {{/each}}
      </dd>
      <dd>
        {{#each step.newAdditions as |proposition|}}
          <ul><li>{{proposition.slug}}</li></ul>
        {{/each}}
      </dd>
    </dl>
  {{/each}}
  {{#if uPlanner.uGoalComplete}}
    <h1>Ending</h1>
    <button {{action "getOutline"}}>Start Again</button>
  {{else}}
    {{#each uPlanner.currentSelections as |operator|}}
      <button {{action "uTakeStep" operator}}>
        {{operator.name}}
      </button>
    {{/each}}
  {{/if}}
{{/if}}
{{yield}}
